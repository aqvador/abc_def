server {
      listen 443 ssl;
      server_name  {{ inventory_hostname }};
      ssl_certificate		/etc/letsencrypt/live/{{ inventory_hostname }}/*_alltel24_ru.full.crt;
      ssl_certificate_key	/etc/letsencrypt/live/{{ inventory_hostname }}/*_alltel24_ru.key;

    location / {
    proxy_set_header Host $host;
    proxy_set_header Remote_addr $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Real-IP $remote_addr;
    # проксируем весь трафик к api в контейнер на nginx
    proxy_pass http://{{ lookup('env', 'HOST_NGINX') }}:6878;
    }
}
